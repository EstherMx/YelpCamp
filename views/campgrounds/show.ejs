<%include ../partials/header%>
<link rel="stylesheet" href="/stylesheets/show.css">
<div class="container">
  <div class="campImg">
    <img src="<%= campground.image%>">
  </div>
  <div class="campInfo">
    <h1><%= campground.name%></h1>
    <ul class="info">
      <li>$<%= campground.price%>/night</li>
      <li><p><%= campground.description%></p></li>
      <li class="submittedBy"><p><em>Submitted By <%= campground.author.username%></em></p></li>
    </ul>  
      
    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
      <ul class="edit">
      <!-- currentUser is defined in app.js, app.use  -->
        <li><a href="/campgrounds/<%= campground._id%>/edit">Edit</a></li>
        <!-- Use a form to create a POST request with _method to delete-->
        <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
          <li><button>Delete</button></li>
        </form>
      </ul>
    <% } %>
  </div>

  <div class="addComment">
    <a href="/campgrounds/<%= campground._id%>/comments/new"> Add A New Comment </a>
  </div>
  <div class="comments"> 
    <%campground.comments.forEach(function(comment){ %>
      <div class="commentsInfo">
        <ul class="post">
          <li><strong><%= comment.author.username%></strong>
             <span>10 days ago</span>
          </li>
          <hr>
          <li><p><%= comment.text%></p></li>
        </ul>
   
      <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
        <ul class="edit">
          <li><a href="/campgrounds/<%= campground._id%>/comments/<%= comment._id%>/edit">
            Edit</a></li>
          <form class="delete-form" action="/campgrounds/<%= campground._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
          <li class="submitComment"><input type="submit" value="Delete" name="Delete"></li></form>
        </ul>
      </div>
    <% }%>
  <% })%>                                          
</div>
<%include ../partials/footer%>