<link rel="stylesheet" type="text/css" href="/stylesheets/comments.css">
<div class="container">
    <h1>Edit Comment</h1>
    <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
        <div class="commentBox">
            <textarea id="text" type="text" name="comment[text]" value="<%= comment.text %>"><%= comment.text%></textarea>
            <ul>
                <li class="submit"><input type="submit" value="Submit"></li>
            </ul>
        </div>
    </form>
</div>